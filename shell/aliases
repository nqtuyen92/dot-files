# path aliases {{{
# use `cd ~xxx' to access
if [ -n $ZSH_VERSION ]; then
	hash -d ETC="/etc/"
	hash -d DOCS="/Users/oxnz/Documents"
	hash -d WORK="/Users/oxnz/Developer"
	hash -d DOWN="/Users/oxnz/Downloads"
fi
#}}}

