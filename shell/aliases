# make colorful grep {{{
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
#}}}

# play safe {{{
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'
#}}}

# specify format {{{
alias ll='ls -aFhl'
alias l='ls -aFhl'
#alias date='date +"%F %T"'
alias df='df -h'
alias du='du -h'
alias gdb='gdb --quiet'
alias bc='bc --quiet'
#}}}

# typing errors...
alias cd..='cd ..'
#alias sl='ls'

#short cuts {{{
alias h='history'
alias j='jobs -l'
alias ..='cd ..'
alias ...='cd ../..'
alias x='extract'
alias g='google'
#}}}

